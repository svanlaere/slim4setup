<!doctype html>
<html lang="nl">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/bootstrap.min.css">

		<title>Home</title>
	</head>

	<body>

		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container">
				<a class="navbar-brand" href="{{ url_for('home') }}">Slim 4 Setup</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item{% if is_current_url('home') %} active{% endif %}">
							<a class="nav-link" href="{{ url_for('home') }}">
								Home
								{% if is_current_url('home') %}
									<span class="sr-only">(current)</span>
								{% endif %}
							</a>
						</li>
						<li class="nav-item{% if is_current_url('hello', {name: 'Slim'}) %} active{% endif %}">
							<a class="nav-link" href="{{ url_for('hello', {name: 'Slim'}) }}">
								Hello Slim
								{% if is_current_url('hello', {name: 'Slim'}) %}
									<span class="sr-only">(current)</span>
								{% endif %}
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
						</li>
					</ul>
					<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
					</form>
				</div>
			</div>
		</nav>

		<div class="container mt-4"> {% block contents %}{% endblock %}
			</div>

			<!-- Optional JavaScript -->
			<!-- jQuery first, then Popper.js, then Bootstrap JS -->
			<script src="{{ full_url_for('home') }}assets/js/jquery.slim.min.js"></script>
			<script src="{{ full_url_for('home') }}assets/js/popper.min.js"></script>
			<script src="{{ full_url_for('home') }}assets/js/bootstrap.min.js"></script>
			{% block scripts %}{% endblock %}
		</body>
	</html>
